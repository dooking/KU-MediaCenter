<% include ./base/base-header %>
<link rel="stylesheet" type="text/css" href="/css/adminpage/equipment-detail.css"/>
<title>관리자 페이지</title>
<% include ./base/base-navbar %>

<div id="wrapper">
  <div class="equip-wrapper">    
    <div class="equip-head">
        <a class="equip-heading" id = 'black' href=""><%= equipment.kind %> (<%= equipment.name %>) - <%= equipment.serial_number%></a>
        <a class="equip-table-link" href="/admin/manage/equipment">
            <button class="btn_add">홈으로</button>
        </a>
    </div>
    <div class="equip-navbar">
      <div class="equip-tabs">
        <div class="equip-tab active"><a id = 'white' href="">장비 상세</a></div>
        <div class="equip-tab"><a id ='gray' href="/admin/manage/equipment/update/<%= equipment.id%>">장비 수정</a></div>
        <div class="equip-tab"><a id ='gray' href="/admin/manage/equipment/history/<%= equipment.id %>">대여 이력</a></div>
      </div>
      <div class="equip-table">
        <div class="equip-form">
          <div class="equip-list">
            <span>장비 타입</span>
            <input type="text" class="category" placeholder="<%= equipment.category%>" value="<%= equipment.category%>" disabled>
          </div>
          <div class="equip-list">
            <span>규격</span>
            <input type="text" class="kind" placeholder="<%= equipment.kind%>" value="<%= equipment.kind%>" disabled>
          </div>
          <div class="equip-list">
            <span>품명</span>
            <input type="text" class="name" placeholder="<%= equipment.name%>" value="<%= equipment.name%>" disabled>
          </div>
          <div class="equip-list">
            <span>장비 시리얼번호</span>
            <input type="text" class="serial_number" placeholder="<%= equipment.serial_number%>" value="<%= equipment.serial_number%>" disabled>
          </div>
          <div class="equip-list">
            <span>현재 장비 상태</span>
            <input type="text" class="state" placeholder="<%= equipment.state%>" value="<%= equipment.state%>" disabled>
          </div>
          <div class="equip-list">
            <span>비고</span>
            <input type="textarea" class="remark" placeholder="<%= equipment.remark%>" disabled>
          </div>
        </div>
        <div class="equip-qr">
          <span>QR 코드</span>
          <div id="qrcode"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/javascript/adminpage/jquery.min.js"></script>
<script type="text/javascript" src="/javascript/adminpage/qrcode.js"></script>
<script type="text/javascript" src="/javascript/adminpage/equipment-detail.js"></script>